            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="CM Comments" HorizontalAlignment="Left" Margin="172,95,0,0" VerticalAlignment="Top" MyValue="9" Checked="MyRadio_Checked"/>
            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="RISK Damage" HorizontalAlignment="Left" Margin="24,130,0,0" VerticalAlignment="Top" MyValue="10" Checked="MyRadio_Checked"/>
            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="RISK Probability" HorizontalAlignment="Left" Margin="24,165,0,0" VerticalAlignment="Top" MyValue="11" Checked="MyRadio_Checked"/>
            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="CM Risk Reduction" HorizontalAlignment="Left" Margin="172,165,0,0" VerticalAlignment="Top" MyValue="12" Checked="MyRadio_Checked"/>
            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="CM Damage" HorizontalAlignment="Left" Margin="172,130,0,0" VerticalAlignment="Top" MyValue="13" Checked="MyRadio_Checked"/>
            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="CM Status" HorizontalAlignment="Left" Margin="172,196,0,0" VerticalAlignment="Top" MyValue="14" Checked="MyRadio_Checked"/>
