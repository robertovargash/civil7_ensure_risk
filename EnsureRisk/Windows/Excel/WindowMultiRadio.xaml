            <local:MyRadio Foreground="{DynamicResource MaterialDesignBody}" Content="Countermeasure ID" HorizontalAlignment="Left" Margin="172,21,0,0" VerticalAlignment="Top" MyValue="7" Checked="MyRadio_Checked"/>
