<UserControl x:Class="EnsureBusinesss.Business.MyDamage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnsureBusinesss.Business"
             mc:Ignorable="d" 
              RenderTransformOrigin="0,0" Width="250" Height="90" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid Name="gridContanerLabels" Background="Transparent" Cursor="Hand">
        <Border Name="myBorder" Background="Beige" CornerRadius="10">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <TextBlock Name="HeaderValue" Text="Cost ($)" Grid.Row="0" VerticalAlignment="Center" Foreground="Black"/>
                <TextBlock Name="CalculatedValue" Text="Acum. Value" Grid.Row="1" VerticalAlignment="Center" Foreground="Black"/>
                <TextBlock Name="ExpectedDamage" Text="Acum. Dam" Grid.Row="2" VerticalAlignment="Center" Foreground="Black"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
